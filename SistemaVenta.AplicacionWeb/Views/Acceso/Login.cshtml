@model SistemaVenta.AplicacionWeb.Models.ViewModels.VMUsuarioLogin;
@{
    Layout =    null;
}
<!DOCTYPE html>
<html lang="ES">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Sistema de Ventas - Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.css" rel="stylesheet">

    <style>
        /* Estilos adicionales para agrandar y centrar el formulario */
        .centered-form {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .enlarged-form {
            width: 100%;
            max-width: 500px;
            padding: 2rem;
        }

            .enlarged-form .form-control-user {
                font-size: 1rem !important;
                padding: 1.2rem 1.5rem !important;
            }

            .enlarged-form .btn-user {
                font-size: 1.1rem !important;
                padding: 0.9rem 1.5rem !important;
            }

        .card {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
    </style>
</head>

<body class="bg-gradient-info">

    <div class="centered-form">
        <div class="enlarged-form">
            <div class="card">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h1 class="h3 text-gray-900 font-weight-bold">Sistema de Ventas</h1>
                        <p class="text-gray-600 mb-4">Ingrese sus credenciales para continuar</p>
                    </div>

                    <form class="user" asp-controller="Acceso" asp-action="Login" method="post">
                        <div class="form-group mb-4">
                            <input type="email" class="form-control form-control-user" required placeholder="Correo electrónico" asp-for="Correo">
                        </div>
                        <div class="form-group mb-4">
                            <input type="password" class="form-control form-control-user" required placeholder="Contraseña" asp-for="Clave">
                        </div>
                        <div class="form-group mb-4">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="chkMantenerSesion" asp-for="MantenerSesion">
                                <label class="custom-control-label" for="chkMantenerSesion">Mantener Sesión</label>
                            </div>
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="form-group mb-4">
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            </div>
                        }

                        <button type="submit" class="btn btn-primary btn-user btn-block py-3 mb-4">
                            Ingresar
                        </button>

                        <hr>

                        <div class="text-center">
                            <a class="small" href="@Url.Action("RestablecerClave","Acceso")">¿Olvidó su contraseña?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>

</html>